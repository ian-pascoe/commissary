{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "fs",
  "description": "enables fs permissions",
  "windows": ["main"],
  "permissions": [
    "fs:default",
    "fs:read-all",
    "fs:write-all",
    "fs:allow-rename",
    "fs:allow-mkdir",
    "fs:allow-exists",
    "fs:allow-watch",
    "fs:read-dirs",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "**/*" },
        { "path": "**/.*" },
        { "path": "$HOME/.config/commissary.json" }
      ]
    }
  ]
}
