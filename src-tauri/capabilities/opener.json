{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "opener",
  "description": "enables opener permissions",
  "windows": ["main"],
  "permissions": [
    "opener:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        { "path": "**/*" },
        { "path": "**/.*" },
        { "path": "$HOME/.config/commissary.json" }
      ]
    }
  ]
}
